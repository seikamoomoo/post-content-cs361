<main class="content">
  <section id="display-posts">
    <div id="posts">
      {{#each postData}}
          {{> posts}}
      {{/each}}
    </div>
  </section>
<button type="button" id="make-post-button"><i>Add Post</i></button>

<div id="modal-backdrop" class="hidden modal-backdrop">
  <div id="post-content-modal" class="hidden modal-container">
    <div class="modal-dialog">
      <div class="modal-header">
        <h3>Create Post</h3>
        <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
      </div>
      <div class="modal-body">

        <div class="title-input-element">
          <label for="username-input">Title</label>
          <input type="text" id="title-input">
        </div>
        <div class="group-input-element">
          <label for="group-input">Group</label>
          <input type="text" id="group-input">
        </div>
        <div class="body-input-element">
          <label for="body-input">Body Text</label>
          <input type="text" id="body-input">
        </div>
        <div class="image-input-element">
          <label for="image-input">Image URL</label>
          <input type="text" id="image-input">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
        <button type="button" id="modal-accept" class="action-button">Post</button>
      </div>

    </div>
  </div>
</div>
